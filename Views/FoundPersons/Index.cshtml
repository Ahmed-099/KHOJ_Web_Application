@model IEnumerable<MissingPersonIdentificationSystem.Models.FoundPerson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true">

<div class="content">
    <h2>Found Persons</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FatherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @* @Html.DisplayNameFor(model => model.PhotoPath) *@
                    Photo
                </th>
                @* <th>
                    @Html.DisplayNameFor(model => model.Finder)
                </th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @* @Html.DisplayFor(modelItem => item.PhotoPath) *@
                        <img src="@Html.DisplayFor(modelItem => item.PhotoPath)" alt="Image Not Found" style="width:100px; height:100px;" />
                    </td>
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.Finder.Id)
                    </td> *@
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>