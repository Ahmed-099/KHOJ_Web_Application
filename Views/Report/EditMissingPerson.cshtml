@model MissingPersonIdentificationSystem.Models.MissingPersonViewModel

@{
    ViewData["Title"] = "Edit Missing Person Report";
}

<br />
<br />
<h2>Edit Missing Person Report</h2>

<form asp-action="EditMissingPerson" method="post" enctype="multipart/form-data">
    <!-- Hidden field for the report Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="MissingPersonName"></label>
        <input asp-for="MissingPersonName" class="form-control" />
        <span asp-validation-for="MissingPersonName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MissingPersonFatherName"></label>
        <input asp-for="MissingPersonFatherName" class="form-control" />
        <span asp-validation-for="MissingPersonFatherName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MissingPersonGender"></label>
        <input asp-for="MissingPersonGender" class="form-control" />
        <span asp-validation-for="MissingPersonGender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload New Photo (optional):</label>
        <input asp-for="MissingPersonPhoto" type="file" class="form-control" />
        <span asp-validation-for="MissingPersonPhoto" class="text-danger"></span>
    </div>

    <hr />
    <h3>Reporter Details (Family Member)</h3>
    <div class="form-group">
        <label asp-for="FamilyMemberName"></label>
        <input asp-for="FamilyMemberName" class="form-control" readonly="readonly" />
        <span asp-validation-for="FamilyMemberName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamilyMemberEmail"></label>
        <input asp-for="FamilyMemberEmail" class="form-control" readonly="readonly" />
        <span asp-validation-for="FamilyMemberEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamilyMemberPhone"></label>
        <input asp-for="FamilyMemberPhone" class="form-control" readonly="readonly" />
        <span asp-validation-for="FamilyMemberPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamilyMemberAddress"></label>
        <input asp-for="FamilyMemberAddress" class="form-control" readonly="readonly" />
        <span asp-validation-for="FamilyMemberAddress" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-controller="UsersProfile" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
