<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h2>KHOJ</h2>
            </div>
            <ul class="sidebar-menu">                
                <li><a asp-controller="AccountAdmin" asp-action="Index"><i class="fas fa-user-plus"></i> Accounts</a></li>
                <li><a asp-controller="FamilyMembers" asp-action="Index"><i class="fas fa-users"></i> Family Members</a></li>
                <li><a asp-controller="MissingPersons" asp-action="Index"><i class="fas fa-user"></i> Missing Persons</a></li>
                <li><a asp-controller="Finders" asp-action="Index"><i class="fas fa-location-arrow"></i> Finders</a></li>
                <li><a asp-controller="FoundPersons" asp-action="Index"><i class="fas fa-user"></i> Found Persons</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <div class="header-left">
                    @* <h1>@ViewData["Title"]</h1> *@
                    <h1>Dashboard</h1>
                </div>
                <div class="header-right">
                    <div class="user-dropdown">
                        <button class="user-dropbtn">
                            <i class="fas fa-user"></i>Admin.<i class="fas fa-caret-down"></i>
                        </button>
                        <div class="user-dropdown-content">
                            <a asp-controller="AccountAdmin" asp-action="AdminProfile"><i class="fas fa-user"></i> My Profile</a>                            
                            <a asp-controller="Account" asp-action="AdminLogout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="~/js/Admin.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>